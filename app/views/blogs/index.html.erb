<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
    </tr>
  <% @blog.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細を開く', blog_path(blog.id)%></td>
      <td><%= link_to '編集する', edit_blog_path(blog.id)%></td>
      <td><%= link_to '削除する', blog_path(blog.id), method: :delete ,data:{confirm:'本当に消去してよろしいですか？'}%></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '新規作成', new_blog_path %>